---
/**
 * English Homepage
 *
 * Main landing page for English-speaking visitors.
 * Route: /en/
 */

import Page from '@/layouts/Page.astro';
import { useTranslations } from '@/i18n';

const lang = 'en';
const t = useTranslations(lang);
---

<Page
  title="Ciara Ruiz - Austin Real Estate Agent"
  description="Trusted bilingual real estate agent in Austin, TX. Specializing in helping families buy, sell, and invest in properties. Expert guidance in English and Spanish."
>
  <div class="text-center py-16 px-8">
    <h1 class="text-4xl mb-4 text-black">Welcome to Ciara Ruiz Real Estate</h1>
    <p class="text-xl mb-8 text-gray-600">Your trusted partner in Austin real estate</p>

    <div class="flex gap-4 justify-center">
      <button type="button" class="px-6 py-3 border-none rounded font-medium cursor-pointer bg-gold text-black">
        {t('cta.search')}
      </button>
      <button type="button" class="px-6 py-3 border-none rounded font-medium cursor-pointer bg-gray-100 text-black">
        {t('cta.value')}
      </button>
    </div>
  </div>

  <nav aria-label="Site navigation">
    <ul>
      <li><a href="/en/">{t('nav.home')}</a></li>
      <li><a href="/en/properties/">{t('nav.properties')}</a></li>
      <li><a href="/en/about/">{t('nav.about')}</a></li>
      <li><a href="/en/guides/">{t('nav.guides')}</a></li>
      <li><a href="/en/blog/">{t('nav.blog')}</a></li>
      <li><a href="/en/contact/">{t('nav.contact')}</a></li>
    </ul>
  </nav>
</Page>
