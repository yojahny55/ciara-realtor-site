---
/**
 * Header Component - Demo8 Design
 *
 * Matches demo8 navbar with glassmorphism gradient background
 * Desktop: Logo with subtitle, centered nav, CTA button
 * Mobile: Logo + hamburger menu
 */

import { useTranslations } from '@/i18n';
import type { Lang } from '@/i18n';
import LanguageToggle from './language-toggle.astro';
import MobileNav from '@/components/islands/mobile-nav';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Navigation links per Story 2.1 AC#1: Home, Buy, Sell, Rent, About, Contact
const navLinks = [
  { href: `/${lang}/`, label: t('nav.home') },
  { href: `/${lang}/${lang === 'en' ? 'properties' : 'propiedades'}/`, label: t('nav.buy') },
  { href: `/${lang}/${lang === 'en' ? 'sell' : 'vender'}/`, label: t('nav.sell') },
  { href: `/${lang}/${lang === 'en' ? 'rent' : 'alquilar'}/`, label: t('nav.rent') },
  { href: `/${lang}/${lang === 'en' ? 'about' : 'sobre-ciara'}/`, label: t('nav.about') },
  { href: `/${lang}/${lang === 'en' ? 'contact' : 'contacto'}/`, label: t('nav.contact') },
];

// Phone number
const phoneNumber = '+1-555-5434';
const phoneHref = 'tel:+15555434';

// Get Started CTA
const ctaUrl = `/${lang}/${lang === 'en' ? 'contact' : 'contacto'}/`;
const ctaLabel = lang === 'en' ? 'Get Started' : 'Comenzar';

// Get current path for active link detection
const currentPath = Astro.url.pathname;
---

<header role="banner" class="site-header">
  <nav aria-label="Main navigation" class="header-nav">
    <!-- Logo - Company + Signature -->
    <a href={`/${lang}/`} class="logo-container" aria-label={lang === 'en' ? 'Home - Avenue Homes - Ciara Ruiz Real Estate' : 'Inicio - Avenue Homes - Ciara Ruiz Bienes RaÃ­ces'}>
      <img
        src="/images/company-logo.webp"
        alt="Avenue Homes"
        class="logo-company"
        width="110"
        height="55"
      />
      <div class="logo-divider"></div>
      <img
        src="/images/logo-signature.webp"
        alt="Ciara Ruiz Realtor"
        class="logo-signature"
        width="275"
        height="55"
      />
    </a>

    <!-- Desktop Navigation -->
    <ul class="desktop-nav">
      {navLinks.map(link => {
        const isActive = currentPath === link.href;
        return (
          <li>
            <a
              href={link.href}
              class="nav-link"
              aria-current={isActive ? 'page' : undefined}
            >
              {link.label}
            </a>
          </li>
        );
      })}
    </ul>

    <!-- Right Side: Language Toggle + CTA -->
    <div class="desktop-actions">
      <!-- Phone Icon -->
      <a href={phoneHref} class="phone-icon" aria-label={t('header.phone')}>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
        </svg>
        <span class="phone-text">{phoneNumber}</span>
      </a>

      <!-- Language Toggle -->
      <div class="lang-toggle-wrapper">
        <LanguageToggle currentLang={lang} currentPath={currentPath} />
      </div>

      <!-- Get Started CTA -->
      <a href={ctaUrl} class="cta-button">
        {ctaLabel}
      </a>
    </div>

    <!-- Mobile: Language Toggle + Hamburger -->
    <div class="mobile-actions">
      <div class="lang-toggle-wrapper">
        <LanguageToggle currentLang={lang} currentPath={currentPath} />
      </div>
      <MobileNav lang={lang} navLinks={navLinks} phoneNumber={phoneNumber} phoneHref={phoneHref} client:media="(max-width: 1023px)" />
    </div>
  </nav>
</header>

<style>
  /* Demo8 exact structure: fixed with margins on all sides */
  .site-header {
    position: fixed;
    top: 1rem;           /* var(--space-sm) */
    left: 1rem;          /* var(--space-sm) */
    right: 1rem;         /* var(--space-sm) */
    z-index: 1000;
    border-radius: 28px; /* var(--radius-lg) */
    padding: 0.75rem 2rem;  /* Reduced vertical padding for larger logo */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

    /* Demo8 glassmorphism effect */
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-top: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 32px rgba(183, 110, 121, 0.08),
                inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  .header-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    gap: 3rem;
    /* No additional padding - padding is on parent .site-header */
  }

  /* Logo - Signature + Company */
  .logo-container {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    text-decoration: none;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .logo-container:hover {
    opacity: 0.85;
    transform: translateY(-1px);
  }

  .logo-container:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
    border-radius: 8px;
  }

  .logo-signature {
    height: 55px;
    width: auto;
    display: block;
    transition: filter 0.2s ease;
  }

  .logo-divider {
    width: 1px;
    height: 45px;
    background: linear-gradient(180deg,
      transparent 0%,
      rgba(74, 63, 58, 0.2) 20%,
      rgba(74, 63, 58, 0.3) 50%,
      rgba(74, 63, 58, 0.2) 80%,
      transparent 100%);
    flex-shrink: 0;
  }

  .logo-company {
    height: 55px;
    width: auto;
    display: block;
    transition: filter 0.2s ease;
  }

  .logo-container:hover .logo-signature,
  .logo-container:hover .logo-company {
    filter: brightness(0.95);
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: none;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
    flex: 1;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .desktop-nav {
      display: flex;
    }
  }

  .nav-link {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-charcoal);
    text-decoration: none;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-primary-dark);
  }

  .nav-link[aria-current="page"] {
    color: var(--color-primary-dark);
    font-weight: 600;
  }

  .nav-link:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
    border-radius: 4px;
  }

  /* Desktop Actions */
  .desktop-actions {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }

  @media (min-width: 1024px) {
    .desktop-actions {
      display: flex;
    }
  }

  .phone-icon {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-charcoal);
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .phone-icon:hover {
    color: var(--color-primary);
  }

  .phone-text {
    display: none;
  }

  @media (min-width: 1280px) {
    .phone-text {
      display: inline;
    }
  }

  .lang-toggle-wrapper {
    display: flex;
    align-items: center;
  }

  .cta-button {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.625rem 1.75rem;
    border-radius: 9999px;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(183, 110, 121, 0.25);
    white-space: nowrap;
  }

  .cta-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(183, 110, 121, 0.35);
  }

  .cta-button:focus {
    outline: 2px solid var(--color-primary-dark);
    outline-offset: 2px;
  }

  /* Mobile Actions */
  .mobile-actions {
    display: flex;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .mobile-actions {
      display: none;
    }
  }

  /* Mobile responsive */
  @media (max-width: 1023px) {
    .site-header {
      top: 0.5rem;
      left: 0.5rem;
      right: 0.5rem;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
    }

    .logo-signature {
      height: 40px;
    }

    .logo-company {
      height: 40px;
    }

    .logo-divider {
      height: 35px;
    }

    .logo-container {
      gap: 0.75rem;
    }
  }
</style>
