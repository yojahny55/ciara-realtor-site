---
import '../styles/global.css';
import type { BaseLayoutProps } from './types';

interface Props extends BaseLayoutProps {}

const {
  title,
  description,
  image = '/og-default.jpg',
  canonical,
  noindex = false,
  type = 'website',
} = Astro.props;

import { getAlternateUrl, getEnglishUrl } from '@/i18n';
import type { Lang } from '@/i18n';
import SpanishWelcomePopup from '@/components/islands/spanish-welcome-popup';

// Get current language from Astro i18n context
const lang = (Astro.currentLocale ?? 'en') as Lang;

// Generate canonical URL
const canonicalURL = canonical ?? new URL(Astro.url.pathname, Astro.site);

// Use Astro.site for consistent URL generation across environments
const siteUrl = Astro.site?.origin ?? 'https://ciararuiz.com';

// Generate hreflang URLs using route-aware translation
const currentPath = Astro.url.pathname;
const alternateLang: Lang = lang === 'en' ? 'es' : 'en';

// Get properly translated alternate URLs
const enUrl = lang === 'en' ? currentPath : getAlternateUrl(currentPath, lang, 'en');
const esUrl = lang === 'es' ? currentPath : getAlternateUrl(currentPath, lang, 'es');

// Fully-qualified URLs for hreflang tags
const alternateEnUrl = `${siteUrl}${enUrl}`;
const alternateEsUrl = `${siteUrl}${esUrl}`;
// x-default should point to English version of CURRENT page, not homepage
const defaultUrl = `${siteUrl}${getEnglishUrl(currentPath)}`;

// Format title with site suffix
const fullTitle = `${title} | Ciara Ruiz Real Estate`;

// Absolute image URL for OG tags
const imageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font Preloading (WOFF2 with crossorigin - critical for LCP) -->
    <link
      rel="preload"
      href="/fonts/cinzel-400.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/josefin-sans-400.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Hreflang Tags for Bilingual SEO (reciprocal links required) -->
    <link rel="alternate" hreflang="en" href={alternateEnUrl} />
    <link rel="alternate" hreflang="es" href={alternateEsUrl} />
    <link rel="alternate" hreflang="x-default" href={defaultUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
  </head>
  <body>
    <!-- Skip to Main Content Link (Accessibility) -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Spanish Welcome Popup (Story 2.4) -->
    <!-- Only renders for first-time auto-detected Spanish visitors -->
    <!-- Uses client:load because popup appears on timer, not scroll visibility -->
    <SpanishWelcomePopup lang={lang} client:load />

    <!-- Page Content Slot -->
    <!-- Note: Pages using Base.astro directly MUST include <main id="main-content"> -->
    <!-- Page.astro handles this automatically -->
    <slot />

    <!-- Popup Auto-Detection Flag (Story 2.4) -->
    <!-- Captures whether localStorage.preferredLanguage existed BEFORE sync script runs.
         If it exists pre-sync, user manually toggled language (toggle sets localStorage
         before navigation). If not, they were auto-detected by middleware (cookie only). -->
    <script>
      window.__hadPreferredLang = !!localStorage.getItem('preferredLanguage');
    </script>

    <!-- Language Preference Sync Script -->
    <!-- Syncs cookie preference to localStorage; falls back to URL language for first visit -->
    <script define:vars={{ lang }}>
      /**
       * Language Preference Sync
       *
       * Keeps localStorage in sync with the server-side cookie preference.
       * Cookie is the source of truth (set by middleware or toggle click).
       *
       * Logic:
       * 1. If cookie exists → sync localStorage from cookie value
       * 2. If no cookie (first visit) → sync from current URL language
       *
       * This avoids overwriting an explicit user preference when they
       * navigate directly to a URL in a different language (e.g., bookmark).
       */
      function getCookie(name) {
        const match = document.cookie.match(new RegExp('(?:^|; )' + name + '=([^;]*)'));
        return match ? match[1] : null;
      }
      const cookieLang = getCookie('preferredLanguage');
      if (cookieLang === 'en' || cookieLang === 'es') {
        localStorage.setItem('preferredLanguage', cookieLang);
      } else if (lang === 'en' || lang === 'es') {
        localStorage.setItem('preferredLanguage', lang);
      }
    </script>
  </body>
</html>

<style>
  /* Skip Link Styling - visible only on focus */
  .skip-link {
    position: absolute;
    left: -9999px;
    z-index: 9999;
    padding: 0.5rem 1rem;
    background: var(--color-primary);
    color: var(--color-black);
    text-decoration: none;
    font-weight: 500;
  }

  .skip-link:focus {
    left: 1rem;
    top: 1rem;
  }
</style>
